<!-- from: after inspecting the element of this page after running the code for one of the modals: http://semantic-ui.com/modules/modal.html -->
<div id="individual-knock-request-modal" class="ui small basic modal">
    <i class="close icon"></i>
    <div class="ui icon header">
            <i class="add user icon"></i>
            Collaborate with @{{collaborator}}
    </div>
    
    <div class="content">
        <div class="description">
<!--            TODO: change from 'Lena Abdalla' to actual user's name, and 'Awesome Workspace' to the workspace's name-->
            <form class="ui inverted form error">
                <div class="required field">
                    <label>Workspace Name</label>
                    <input id="workspace-name-id" type="text" name="workspace-name">
                </div> 
<!--
                <div class="ui inverted error message">
                    <p>You must provide your username.</p>
                </div>
-->
            </form>
        </div>
    </div>

    <div class="actions">
            <div class="ui inverted green button" ng-click="emitNewWorkspaceRequest(collaborator)">
                <i class="checkmark icon"></i>
                Send Request
            </div>
            
    </div>
</div>